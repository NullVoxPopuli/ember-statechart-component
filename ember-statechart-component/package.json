{
  "name": "ember-statechart-component",
  "version": "6.1.2",
  "keywords": [
    "ember-addon"
  ],
  "type": "module",
  "description": "Use XState Machines *as* Components",
  "repository": "https://github.com/NullVoxPopuli/ember-statechart-component",
  "license": "MIT",
  "author": "NullVoxPopuli",
  "exports": {
    ".": "./dist/index.js",
    "./glint": "./dist/glint.js",
    "./*": "./dist/*",
    "./addon-main.js": "./addon-main.cjs"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ],
      "glint": [
        "./dist/glint.d.ts"
      ]
    }
  },
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "files": [
    "addon-main.cjs",
    "dist",
    "declarations",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "start": "concurrently \"npm:watch:*\"",
    "build": "concurrently \"npm:build:*\"",
    "build:js": "rollup -c ./rollup.config.mjs",
    "build:docs": "cp ../README.md ./README.md",
    "watch:js": "rollup -c --watch --no-watch.clearScreen",
    "lint": "concurrently \"npm:lint:js\"",
    "lint:fix": "concurrently \"npm:lint:js:fix\"",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "test": "echo 'Addon does not have tests, run tests in test-app'",
    "prepare": "pnpm build",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.8.9",
    "ember-tracked-storage-polyfill": "^1.0.0"
  },
  "peerDependencies": {
    "@glint/template": ">= 0.8.3",
    "xstate": "^5.18.0"
  },
  "peerDependenciesMeta": {
    "@glint/template": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "7.25.7",
    "@babel/eslint-parser": "^7.25.7",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-syntax-decorators": "7.25.7",
    "@babel/plugin-transform-typescript": "^7.25.7",
    "@babel/preset-typescript": "7.25.7",
    "@embroider/addon-dev": "^5.0.0",
    "@glimmer/compiler": "^0.92.4",
    "@glimmer/component": "^1.0.4",
    "@glimmer/env": "^0.1.7",
    "@glint/template": "^1.4.0",
    "@nullvoxpopuli/eslint-configs": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "babel-eslint": "10.1.0",
    "concurrently": "^9.0.1",
    "ember-cli-htmlbars": "^6.0.0",
    "ember-template-lint": "6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-decorator-position": "^5.0.2",
    "eslint-plugin-ember": "^12.2.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "^3.3.3",
    "rollup": "4.24.0",
    "rollup-plugin-ts": "^3.0.2",
    "typescript": "~5.5.0",
    "xstate": "^5.18.2"
  },
  "engines": {
    "node": ">=12.2.0 < 13 || >= 14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs",
    "app-js": {}
  },
  "volta": {
    "extends": "../package.json",
    "npm": "8.19.4"
  }
}
